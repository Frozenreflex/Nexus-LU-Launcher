<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:NLUL.GUI.Component="clr-namespace:NLUL.GUI.Component"
        xmlns:NLUL.GUI.Component.Play="clr-namespace:NLUL.GUI.Component.Play"
        mc:Ignorable="d" d:DesignWidth="680" d:DesignHeight="470"
        x:Class="NLUL.GUI.MainWindow"
        d:WindowTransparencyLevelHint="Transparent"
        Width="680" Height="470"
        TransparencyLevelHint="Transparent"
        Background="Transparent"
        HasSystemDecorations="false"
        Title="Nexus Lego Universe Launcher"
        Icon="/Assets/Images/NexusLegoUniverseLauncherLogo.ico">
    <Canvas>
        <Border Background="#1A1922" BorderBrush="#12131C"
                BorderThickness="3" CornerRadius="20"
                Height="420" Canvas.Top="50">
            <StackPanel>
                <NLUL.GUI.Component:TopBar Height="62"/>
                <Panel Background="#000000" Height="256" Margin="2,0"></Panel>
                <NLUL.GUI.Component.Play:PlayPanel/>
                <NLUL.GUI.Component.Play:PlayButtons Margin="60,12,0,0"/>
            </StackPanel>
        </Border>
        <Image Source="/Assets/Images/NexusLegoUniverseLauncherLogo.png" Width="100" Height="100"
               Canvas.Left="290"></Image>
    </Canvas>
</Window>